{
  "expo": {
    "name": "Ride Share",
    "slug": "ride-sharing-mvp",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "dark",
    "scheme": "rideshare",
    "newArchEnabled": true,
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#0A0A0A"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.rideshare.mvp"
    },
    "android": {
      "package": "com.rideshare.mvp",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ],
      "adaptiveIcon": {
        "backgroundColor": "#0A0A0A"
      }
    },
    "web": {
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Ride Share to use your location to find nearby rides and calculate meeting points."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Ride Share to access your photos to upload a profile picture."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}

